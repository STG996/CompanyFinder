#: import go_back screens.screens.go_back

<MatchRequestsScreen>:
    MDBoxLayout:
        orientation: "vertical"
        spacing: 16

        MDTopAppBar:
            type: "small"

            MDTopAppBarLeadingButtonContainer:
                MDActionTopAppBarButton:
                    icon: "arrow-left"
                    on_press: app.root.current = go_back()

            MDTopAppBarTitle:
                text: "Match requests"

        MDBoxLayout:
            orientation: "vertical"
            spacing: 32
            size_hint_x: None
            width: 500
            pos_hint: {"center_x": 0.5}

            MDScrollView:
                MDList:
                    id: match_requests_list