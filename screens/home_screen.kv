# Design code for the home screen

<HomeScreen>:
    MDBoxLayout:
        orientation: "vertical"
        spacing: 16

        MDTopAppBar:
            type: "small"
            size_hint_x: 0.99999 # temp fix, no clue why

            MDTopAppBarLeadingButtonContainer:
                MDActionTopAppBarButton:
                    icon: "menu"

            MDTopAppBarTitle:
                text: "Home"

            MDTopAppBarTrailingButtonContainer:
                MDActionTopAppBarButton:
                    icon: "account-circle"
                    on_press: app.root.current = root.go_to_account_screen()

        BoxLayout:

        MDCard:
            padding: 16

            MDLabel:
                text: "For you"

        BoxLayout:
