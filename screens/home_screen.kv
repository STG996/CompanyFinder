# Design code for the home screen

<HomeScreen>:
    MDBoxLayout:
        orientation: "vertical"
        spacing: 16

        MDTopAppBar:
            type: "small"
            size_hint_x: 0.99999 # temp fix, no clue why
            pos_hint: {"top": 1}

            MDTopAppBarLeadingButtonContainer:
                MDActionTopAppBarButton:
                    icon: "menu"

            MDTopAppBarTitle:
                text: "Home"

            MDTopAppBarTrailingButtonContainer:
                MDActionTopAppBarButton:
                    icon: "account-circle"
                    on_press: app.root.current = "account_settings"

        MDCard:
            MDBoxLayout:
                orientation: "vertical"

                MDLabel:
                    text: "For you"