#: import go_to_screen screens.screens.go_to_screen

<HomeScreen>:
    MDBoxLayout:
        orientation: "vertical"
        spacing: 16

        MDTopAppBar:
            type: "small"
            size_hint_x: 0.99999 # temp fix, no clue why

            MDTopAppBarLeadingButtonContainer:
                MDActionTopAppBarButton:
                    icon: "menu"
                    on_press: nav_drawer.set_state("toggle")

            MDTopAppBarTitle:
                text: "Home"

            MDTopAppBarTrailingButtonContainer:
                MDActionTopAppBarButton:
                    icon: "account-circle"
                    on_press: app.root.current = go_to_screen("home_screen", "account_screen")

        BoxLayout:

    MDNavigationDrawer:
        id: nav_drawer

        MDNavigationDrawerMenu:
            MDNavigationDrawerLabel:
                text: "Menu"

            MDNavigationDrawerItem:
                on_press: app.root.current = go_to_screen("home_screen", "company_registration_screen")

                MDNavigationDrawerItemLeadingIcon:
                    icon: "domain-plus"

                MDNavigationDrawerItemText:
                    text: "Register your company"

            MDNavigationDrawerDivider:
