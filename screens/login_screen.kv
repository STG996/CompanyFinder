# Design code for login screen

<LoginScreen>:
    name: "login_screen"
    MDBoxLayout:
        orientation: "vertical"
        spacing: 16
        size_hint_y: 0.7
        pos_hint: {"center_y": 0.5}

        # "Welcome Back" text
        MDLabel:
            text: "Welcome Back"
            font_style: "Headline"
            halign: "center"

        # Email text field
        MDTextField:
            id: email
            mode: "outlined"
            hint_text: "Email"
            helper_text_mode: "on_error"
            on_text_validate: root.check_email_uix()

            icon_left: "email"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}

        # Password text field
        MDTextField:
            id: password
            mode: "outlined"
            hint_text: "Password"
            icon_left: "eye-off"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}
            password: True

        # Login button, bound to db
        MDButton:
            style: "elevated"
            pos_hint: {"center_x": 0.5}
            on_press: root.check_signin(email.text, password.text)
            MDButtonText:
                text: "Log in"
                font_size: 15

        MDLabel:
            text: "Don't have an account?"
            role: "small"
            halign: "center"
            size_hint_y: None
            height: self.texture_size[1]

        # Button redirecting to signup screen
        MDButton:
            style: "text"
            pos_hint: {"center_x": 0.5}
            on_press:
                app.root.current = "signup_screen"
                root.manager.transition.direction = "right"
            MDButtonText:
                text: "Sign up"
                role: "small"
