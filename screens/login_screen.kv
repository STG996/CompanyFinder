# Design code for login screen

<LoginScreen>:
    name: "login_screen"
    MDCard:
        size_hint: None, None
        size: 300, 400
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 20
        spacing: 25

        orientation: "vertical"

        # "Welcome Back" text
        MDLabel:
            text: "Welcome Back"
            font_size: 30
            halign: "center"
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15

        # Email text field
        MDTextField:
            id: email
            mode: "outlined"
            hint_text: "Email"
            helper_text_mode: "on_error"
            on_text_validate: root.check_email_uix()

            icon_left: "email"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}

        # Password text field
        MDTextField:
            id: password
            mode: "outlined"
            hint_text: "Password"
            icon_left: "eye-off"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}
            password: True

        # Login button, bound to db
        MDButton:
            style: "elevated"
            pos_hint: {"center_x": 0.5}
            on_press: root.check_signin(email.text, password.text)
            MDButtonText:
                text: "Log in"
                font_size: 15

        # Navigation to signup if necessary
        MDBoxLayout:
            orientation: "horizontal"
            spacing: 2

            Widget:
                size_hint_x: None
                width: 48

            MDLabel:
                text: "Don't have an account?"
                font_size: 11
                halign: "center"
                size_hint_y: None
                height: self.texture_size[1]

            # Button redirecting to signup screen
            MDButton:
                style: "text"
                on_press:
                    app.root.current = "signup_screen"
                    root.manager.transition.direction = "right"
                MDButtonText:
                    text: "Sign up"
                    font_size: 11

            Widget:
                size_hint_x: None
                width: 48