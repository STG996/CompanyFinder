#: import go_to_screen screens.screens.go_to_screen
#: import go_back screens.screens.go_back
#: import check_email_uix account.regex.check_email_uix

<LoginScreen>:
    MDBoxLayout:
        orientation: "vertical"
        spacing: 16
        size_hint_y: 0.7
        pos_hint: {"center_y": 0.5}

        # "Welcome Back" text
        MDLabel:
            text: "Welcome Back"
            font_style: "Headline"
            halign: "center"

        # Email text field
        MDTextField:
            id: email
            mode: "outlined"
            on_focus: check_email_uix(root.ids)
            size_hint_x: None
            width: 200
            pos_hint: {"center_x": 0.5}
            MDTextFieldHintText:
                text: "Email"
            MDTextFieldLeadingIcon:
                icon: "email"

        # Password text field
        MDTextField:
            id: password
            mode: "outlined"
            size_hint_x: None
            width: 200
            pos_hint: {"center_x": 0.5}
            password: True
            MDTextFieldHintText:
                text: "Password"
            MDTextFieldLeadingIcon:
                icon: "asterisk"

        # Login button, bound to db
        MDButton:
            style: "elevated"
            pos_hint: {"center_x": 0.5}
            on_press:
                root.check_signin(email.text, password.text)
            MDButtonText:
                text: "Log in"
                font_size: 15

        MDLabel:
            text: "Don't have an account?"
            role: "small"
            halign: "center"
            size_hint_y: None
            height: self.texture_size[1]

        # Button redirecting to signup screen
        MDButton:
            style: "text"
            pos_hint: {"center_x": 0.5}
            on_press:
                app.root.current = go_back()
            MDButtonText:
                text: "Sign up"
                role: "small"
