#: import go_to_screen screens.screens.go_to_screen
#: import check_email_uix account.regex.check_email_uix

<SignupScreen>:
    MDBoxLayout:
        orientation: "vertical"
        spacing: 16
        size_hint_y: 0.7
        pos_hint: {"center_y": 0.5}

        # "Welcome" text
        MDLabel:
            text: "Welcome"
            font_style: "Headline"
            halign: "center"

        # Username text field
        MDTextField:
            id: user
            mode: "outlined"
            size_hint_x: None
            width: 200
            pos_hint: {"center_x": 0.5}
            MDTextFieldHintText:
                text: "Username"
            MDTextFieldLeadingIcon:
                icon: "account"

        # Email text field
        MDTextField:
            id: email
            mode: "outlined"
            on_focus: check_email_uix(root.ids)
            size_hint_x: None
            width: 200
            pos_hint: {"center_x": 0.5}
            MDTextFieldHintText:
                text: "Email"
            MDTextFieldLeadingIcon:
                icon: "email"

        # Password text field
        MDTextField:
            id: password
            mode: "outlined"
            size_hint_x: None
            width: 200
            pos_hint: {"center_x": 0.5}
            password: True
            MDTextFieldHintText:
                text: "Password"
            MDTextFieldLeadingIcon:
                icon: "asterisk"

        # Signup button, bound to db
        MDButton:
            style: "elevated"
            pos_hint: {"center_x": 0.5}
            on_press: root.create_account(user.text, email.text, password.text)
            MDButtonText:
                text: "Sign up"
                font_size: 15

        MDLabel:
            text: "Already have an account?"
            halign: "center"
            size_hint_y: None
            height: self.texture_size[1]
            role: "small"

        # Button redirecting to login screen
        MDButton:
            style: "text"
            pos_hint: {"center_x": 0.5}
            on_press:
                app.root.current = go_to_screen("signup_screen", "login_screen")
            MDButtonText:
                text: "Log in"
                role: "small"
