# Design code for signup screen

<SignupScreen>:
    name: "signup_screen"
    MDBoxLayout:
        orientation: "vertical"
        spacing: 16
        size_hint_y: 0.7
        pos_hint: {"center_y": 0.5}
        # "Welcome" text
        MDLabel:
            text: "Welcome"
            font_style: "Headline"
            halign: "center"

        # Username text field
        MDTextField:
            id: user
            mode: "outlined"
            hint_text: "Username"
            icon_left: "account"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}

        # Email text field
        MDTextField:
            id: email
            mode: "outlined"
            hint_text: "Email"
            hint_text: "Email"
            helper_text_mode: "on_error"
            on_focus: root.check_email_uix()
            icon_left: "email"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}

        # Password text field
        MDTextField:
            id: password
            mode: "outlined"
            hint_text: "Password"
            icon_left: "eye-off"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}
            password: True

        # Signup button, bound to db
        MDButton:
            style: "elevated"
            pos_hint: {"center_x": 0.5}
            on_press: root.create_account(user.text, email.text, password.text)
            MDButtonText:
                text: "Sign up"
                font_size: 15

        MDLabel:
            text: "Already have an account?"
            halign: "center"
            size: self.texture_size
            role: "small"

        # Button redirecting to login screen
        MDButton:
            style: "text"
            pos_hint: {"center_x": 0.5}
            on_press:
                app.root.current = "login_screen"
                root.manager.transition.direction = "left"
            MDButtonText:
                text: "Log in"
                role: "small"
